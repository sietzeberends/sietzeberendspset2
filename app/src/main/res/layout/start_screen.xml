<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/introImage"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="0.5"
        android:src="@mipmap/madlibs"/>

    <TextView
        android:id="@+id/introText"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/introImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Welcome to Mad Libs! I will ask you to fill in words in order to complete a story. You won't be able to see the full story unless you've filled all the missing words, but that's part of the fun!"
        />

    <Button
        android:id="@+id/introButton"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Get started!"
        android:onClick="getStarted"
        />

</RelativeLayout>

